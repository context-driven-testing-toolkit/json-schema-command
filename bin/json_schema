if [ -z "$1" ]
then
    echo "Usage: `basename $0` <path to JSON file>"
    exit 1
elif [ ! -f "$1" ]
then
    echo "Usage: $(basename $0) <JSON file>"
    echo "ERROR: Not a file: $1"
    exit 1
elif [ ! -x "$(which jq)" ]
then
    echo "ERROR: jq is not in your path!"
    exit 1
fi

jq --raw-output \
        'paths
        | map(. as $item
            | type
            | if . == "number" then
                  "[]"
              else
                  "[\"" + $item + "\"]"
              end)
        | join("")
        | "." + .' \
    "$1" \
    | sort \
    | uniq -c
